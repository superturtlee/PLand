#pragma once
#include <string_view>

namespace land {

// clang-format off
#define GEN_GIT_COMMIT   "${GIT_COMMIT}"
#define GEN_GIT_BRANCH   "${GIT_BRANCH}"
#define GEN_GIT_TAG      "${GIT_TAG}"
// clang-format on

struct BuildInfo {
    // commit hash (e.g. "a1b2c3d4")
    static constexpr std::string_view Commit = GEN_GIT_COMMIT;

    // build branch (e.g. "main")
    static constexpr std::string_view Branch = GEN_GIT_BRANCH;

    // build tag (e.g. "v1.2.3")
    // v0.1.0-alpha.1-14-g61162a0 -> v0.1.0-alpha.1 is the tag
    // 14 is the tag distance
    // g61162a0 is the tag commit hash
    static constexpr std::string_view Tag = GEN_GIT_TAG;
};


} // namespace plotx